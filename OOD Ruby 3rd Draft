# Layer one Library
class Library
  def initialize(shelves, books)
    @shelves = shelves
    @books = books
    books = [['Goosebumps', 'Shakespeare', 'Astronomy', 'Stephen King', 'Calvin and Hobbes']]
    books.count #=>5
  end
end

# Layer two Shelf
class Shelf < Library
  def initialize(shelves, books)
    super
    shelves = [['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']]
    shelves.count #=> 26
  end
end


#Layer three book
class Book < Shelf
  def initialize(shelves, books)
    super
  end

#ENSHELF adding a book to the array/shelf
books.insert('Illiad', 'Notebook')

#UNSHELF taking a book off the array/shelf
books.delete('Stephen King')

end

