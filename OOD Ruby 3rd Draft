#Layer three book
class Book
  attr_accessor :book, :shelf, :library
  def initialize(book, shelf, library)
    @book = book
    @shelf = shelf
    @library = library  
  end

  def to_s
  "the book: #{@book} is located on shelf #{@shelf} in the library #{@library}"
  end

end

